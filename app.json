{
  "expo": {
    "name": "Currency Snap",
    "slug": "currency-snap",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Currency Snap to access your camera to scan price tags."
      }
    },
    "android": {
      "package": "com.currencysnap.app",
      "permissions": [
        "CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Currency Snap to access your camera to scan price tags."
        }
      ]
    ]
  }
}
